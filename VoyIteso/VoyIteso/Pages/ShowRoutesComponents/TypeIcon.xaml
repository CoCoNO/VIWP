    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="200" d:DesignWidth="440">

    <Grid Width="440" Height="100" Background="{StaticResource PhoneChromeBrush}">

        <Grid Background="#004C6D">
            <StackPanel>
                <Grid>
                    <TextBlock Name="label" FontSize="33" Foreground="#6ECFF3" Text="Nombre del sujeto" Margin="123,27,10,34">
                    </TextBlock>
                    <Image Name="icon" Source="../../Images/pedir_aventon.png" Margin="10,10,353,10"/>
                </Grid>

            </StackPanel>



        </Grid>
    </Grid>
</UserControl>