            <!--Panorama item three-->
            <phone:PanoramaItem Header="">
                <Grid>
                    <TextBlock HorizontalAlignment="Center" FontSize="35" Text="Cuéntale a los demás un poco de tí" TextWrapping="Wrap" Margin="42,322,10,0" Width="368"/>
                </Grid>
