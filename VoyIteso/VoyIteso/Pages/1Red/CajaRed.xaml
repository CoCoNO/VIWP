<UserControl x:Class="VoyIteso.Pages.NotificationsStuff.CajaRed"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="150" d:DesignWidth="440">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">

        <Grid Background="#1E81C0" Name="Grid" Width="440" Height="150">
            <Grid Margin="10,0,324,0">
                <Image Name="Image" Source="../../Images/man.jpg" Margin="0,10,-18,10"></Image>
            </Grid>
            <StackPanel Margin="144,0,0,0">
                <TextBlock Foreground="White" TextWrapping="Wrap" x:Name="Name" Text="nombre del cabron" FontSize="22" Height="34"/>
                <TextBlock Foreground="White" TextWrapping="Wrap" x:Name="Description" Text="Comentarios del cabron" FontSize="17" Height="113" Margin="0,0,10,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>