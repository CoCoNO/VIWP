<UserControl x:Class="VoyIteso.MapIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" Width="150" Height="50">
    <!--Width="33" Height="50"-->

    <Grid x:Name="LayoutRoot" RenderTransformOrigin="0.5,0.502">

        <Image Width="33" VerticalAlignment="Center"  Source="pin1.png" Stretch="None" x:Name="pushpin" HorizontalAlignment="Center" Margin="-17,-46,134,50"/>
        <Grid Background="DarkSlateGray" Margin="-165,-96,-20,96">
            <TextBlock x:Name="pushPinHeader" Text="Name"/>
        </Grid>
    </Grid>

</UserControl>